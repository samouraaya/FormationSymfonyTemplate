{% extends "AppBundle:Layaout:base.html.twig" %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('category_index') }}">Back to the list</a>
    <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
    <br><br>
    {{ form_start(delete_form) }}
    <input type="hidden" name="_method" value="DELETE" />
    <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}

{% endblock %}
